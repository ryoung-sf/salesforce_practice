<div id="<%= dom_id(message) %>_messages">
  <% if message.role == "user" %>
    <div class="bg-sky-400 rounded-lg m-8 text-white p-4">
      <%= message.content %>
    </div>
  <% else %>
    <div id=<%= "assistant_message_#{message.id}" %> class="bg-gray-200 rounded-lg m-8 text-black p-4">
      <%= message.content %>
    </div>
  <% end %>
</div>